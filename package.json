{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn ts:check && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint",
    "*.css": "stylelint"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "\\.svg": "<rootDir>/.jest/__mocks__/svgr-mock.ts",
      "^jest-helpers/(.*)": "<rootDir>/.jest/$1",
      "^components/(.*)": "<rootDir>/src/components/$1",
      "^core/(.*)": "<rootDir>/src/core/$1"
    },
    "setupFiles": [
      "<rootDir>/.jest/env.ts",
      "jest-canvas-mock"
    ],
    "transform": {
      "^.+\\.(tsx|ts|js|jsx)?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      "cypress"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Safari versions",
    "last 1 Edge versions"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export -o dist",
    "start": "next start",
    "test": "jest",
    "ts:check": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/react": "1.6.22",
    "contentful": "8.3.1",
    "next": "^10.1.3",
    "next-compose-plugins": "2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "6.0.1",
    "what-input": "^5.2.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@lasalefamine/eslint-config": "^0.2.4",
    "@next/bundle-analyzer": "^10.1.3",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/jest": "^26.0.22",
    "@types/mdx-js__react": "1.5.3",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-plugin-jsx-remove-data-test-id": "^3.0.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cssnano": "^5.0.1",
    "cssnano-preset-advanced": "^5.0.0",
    "cypress": "^7.1.0",
    "eslint": "^7.24.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.1",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-inset": "^1.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-preset-env": "^6.7.0",
    "react-test-renderer": "^17.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-oval": "^1.0.6",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}
